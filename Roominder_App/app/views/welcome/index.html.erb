<div class="bgimg">
  <!--Title and buttons-->
  <div class="middle">
    <h1>Roominder</h1>
        <% if current_user %>
          Logged in as <%= current_user.username %>.
          <%= button_to "Log Out", logout_path, class: 'button', method: :get %>
        <% else %>
          <%= button_to "Sign Up", sign_up_index_path, class: 'button', method: :get %>
          <%= button_to "Log In", login_path, class: 'button', method: :get %>
        <% end %>
  </div>
  <!--footer-->
  <!-- TODO: on frontend, rename class to something more descriptive. "footer"? -->
  <div class="footer">
    <p>&copy; Roominder 2020</p>
  </div>
</div>
