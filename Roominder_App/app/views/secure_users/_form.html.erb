<%= form_with(model: secure_user, local: true) do |form| %>
  <% if secure_user.errors.any? %>
    <!-- FIXME: we currently lose the room_id from sign_up_controller#new 
    when an error occurs on sign up, rendering the user completely unable to sign up after error-->
    <div id="error_explanation">
      <h2><%= pluralize(secure_user.errors.count, "error") %> prohibited this secure_user from being saved:</h2>

      <ul>
      <% secure_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= form.hidden_field :room_id, :value => params[:room_id] %>
  </div>

  <div class="actions">
    <%= form.submit 'Sign Up' %>
  </div>
<% end %>
