<div class="bgImage">
    <header>
        <h1 id="roomiTag">Roominder</h1>
        <%= image_tag('roomi.png') %>
    </header>
    <body>
        <p id="notice"><%= notice %></p>
              <h1 id="userTable">Users</h1>
              <%= link_to 'New User', new_secure_user_path,:class => 'backLink' %>
              <table class="userData">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @secure_users.each do |secure_user| %>
                    <tr id="columnHead">
                      <td><%= secure_user.name %></td>
                      <td><%= secure_user.username %></td>
                      <td><%= secure_user.email %></td>
                      <td><%= link_to 'Show', secure_user %></td>
                      <td><%= link_to 'Edit', edit_secure_user_path(secure_user) %></td>
                      <td><%= link_to 'Destroy', secure_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <br>
      </body>
      <footer> 
        &copy Roominder 2020
      </footer>
</div>
