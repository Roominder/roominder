<h1><%= current_user.room.name %> - Tasks</h1>
<!-- TODO: add invite roommates button -->
<table>
    <tr>
        <th>Task Name</th>
        <th>Assigned To</th>
        <th>Due Date</th>
        <th>Collateral</th>
        <th>Frequency</th>
    </tr>
    
    <% @tasks.each do |task| %>
        <tr>
            <td><%= task.taskName %></td>
            <td><%= SecureUser.find(task.assignedTo).name %></td>
            <td><%= task.dueDate %></td>
            <td><%= task.collateral %></td>
            <td><%= task.frequency %></td>
        </tr>
    <% end %>
</table>
<%= link_to 'Create Task', new_room_secure_user_task_path %>