<div class="bgImage">
    <header>
        <h1>Roominder</h1>
        <%= image_tag('roomi.png') %>
    </header>
    <body>
            <div id="create">
                <h2>Create</h2>
                <p>Create a room if one does not yet exist within Roominder.</p>
                <%= button_to "Create a Room", sign_up_create_room_path, class: "button", method: :get%>
            </div>
            <div id="join">
                <h2>Join</h2>
                <p>Join a room if one already exist within Roominder. You will need an invite code.</p>
            <%= button_to "Join a Room", sign_up_join_room_path, class: "button", method: :get%>
            </div>
    </body>

    <footer> 
        &copy Roominder 2020
    </footer>
</div>